%main.container.general-main-wrap
  .text-center
    %h3.general-login-title Log In
    = link_to user_facebook_omniauth_authorize_path, class: 'general-login-icon' do
      %i.fa.fa-facebook-official
    %p.general-login-text or
  .general-form
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group.mb-30
        = f.input :email, required: false, autofocus: true, placeholder: 'email', id: 'email', input_html: { class: 'form-control control-label input-label' }
      .form-group.mb-30
        = f.input :password, required: false, placeholder: 'password', id: 'password', input_html: { class: 'form-control control-label input-label' }
        - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
          = link_to 'Forgot your password?', new_password_path(resource_name), { class: 'help-block in-gold-500' }
      - if devise_mapping.rememberable?
        .form-group.checkbox.text-center.mb-30
          %label.checkbox-label
            %input.checkbox-input{type: "checkbox", hidden: "true"}
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text Remember me
      .text-center
        %button.btn.btn-default.mb-20 Back to Store
      %p.general-sign-text.text-center
        Donâ€™t have an Account? 
        = link_to "Sign up", new_registration_path(resource_name), {class: 'in-gold-500' } if devise_mapping.registerable? && controller_name != 'registrations'
d/links"
