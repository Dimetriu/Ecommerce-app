%li
  = link_to 'Home', root_url
%li.dropdown
  = link_to 'Shop', root_url, { class: 'dropdown-toggle', 'data-toggle': 'dropdown', 'role': 'button', 'aria-haspopup': 'true', 'aria-expanded': 'false' }
  %ul.dropdown-menu

  - if user_signed_in?
    %li.dropdown
      = link_to 'My account', root_url, { class: 'dropdown-toggle', 'data-toggle': 'dropdown', 'role': 'button', 'aria-haspopup': 'true', 'aria-expanded': 'false' }
      %ul.dropdown-menu
        %li
          = link_to 'Orders', root_url
        %li
          = link_to 'Settings', root_url
        %li.divider{ role: 'separator' }
          %li
            = link_to 'Log out', destroy_user_session_path
  - else
    %li
      = link_to 'Log in', new_user_session_path
    %li
      = link_to 'Sign up', new_user_registration_path
  %li
    = link_to root_url do
      %span.shop-icon
        -# %span.shop-quantity